- content_for :title do
	= I18n.t :welcome, :scope => [:general]

#about
	.border
		.box
			- count = 0
			- @images.each do |image|
				- count += 1
				.image{:id => "block_#{count}"}= image_tag image.image.url(:gallery), :width => "180px", :border => "0", :alt => (image.description.present? ? image.description : "Beef & Frog" )
			- fallback_images = 4 - @images.count
			- if fallback_images > 0
				- count = 4 - fallback_images
				- while count < 4 do
					- count += 1
					.image{:id => "block_#{count}"}= image_tag "fallback/list_default.png", :width => "180px", :border => "0", :alt => "Beef & Frog"
	%h2.title= markdown(resource.about).html_safe
